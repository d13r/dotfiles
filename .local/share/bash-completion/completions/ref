_ref_completion() {
    local file files

    if [[ $COMP_CWORD = 1 ]]; then

        files=()
        for file in $HOME/.ref/*.txt; do
            file=${file#$HOME/.ref/}
            file=${file%.txt}
            files+=("$file")
        done

        COMPREPLY=( $(compgen -W "${files[*]}" -- "${COMP_WORDS[COMP_CWORD]}") )

    elif [[ $COMP_CWORD = 2 ]]; then

        COMPREPLY=(edit delete)

    fi
}

complete -F _ref_completion ref
