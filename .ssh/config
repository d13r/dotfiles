    Hostname webdev.maths.ox.ac.uk
    ForwardX11 yes

# We have an ongoing issue where internal IPv6 TCP connections are closed after a few minutes, so stick to IPv4
# And service IPs intermittently don't work via gate (Connection closed by UNKNOWN port 65535)
Host account.maths.ox.ac.uk account acc
    AddressFamily inet
    Hostname fuse.maths.ox.ac.uk

Host git.maths.ox.ac.uk git
    AddressFamily inet
    Hostname laser.maths.ox.ac.uk

